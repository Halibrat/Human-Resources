@model HumanResourcesSystem.Entities.Concrete.JobPosting
@{
    Layout = null;
}


<!DOCTYPE html>

<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
          integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous" />

    <title>İş İlanı Ekleme</title>

    <link href="~/Files/Employee/style.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
</head>
<body>
    <input type="checkbox" id="check">
    <label for="check">
        <i class="fas fa-bars" id="btn"></i>
        <i class="fas fa-times" id="cancel"></i>
    </label>
    <div class="sidebar">
        <header><a href="/Administrator/Index" style="color:white">X-HRS</a></header>
        <ul>
            <li><a href="/JobPosting/Index"><i class="fa fa-users" aria-hidden="true"></i>İş İlanları</a></li>
            <li><a href="/JobPosting/Add"><i class="fa fa-plus" aria-hidden="true"></i>Ekle</a></li>
            <li><a href="/JobPosting/Update"><i class="fab fa-chrome" aria-hidden="true"></i>Güncelle</a></li>
            <li><a href="/JobPosting/GetAll"><i class="fa fa-list-ol" aria-hidden="true"></i>Listele</a></li>
            <li><a href="/JobPosting/Search"><i class="fa fa-search" aria-hidden="true"></i>Ara</a></li>
            <li><a href="/JobPosting/Delete"><i class="fa fa-trash" aria-hidden="true"></i>Sil</a></li>
            <li><a href="/Default/Index"><i class="fas fa-home"></i>Ana Sayfa</a></li>
        </ul>
    </div>

    <div class="container text-center">
        <h1 class="order py-4 ">
            <i class="far fa-handshake"></i> İş İlanları

        </h1>
        <div class="d-flex justify-content-center">
            @using (Html.BeginForm())
            {

                @Html.TextBoxFor(jp => jp.Position, new { @class = "form-control", placeholder = "Pozisyon" })
                @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col">
                        @Html.TextBoxFor(jp => jp.Description, new { @class = "form-control", placeholder = "Açıklama" })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                    <div class="col">
                        @Html.TextBoxFor(jp=>jp.CreatedTime, new { @class = "form-control", placeholder = "Oluşturulma Tarihi" })
                        @Html.ValidationMessageFor(model => model.CreatedTime, "", new { @class = "text-danger" })
                    </div>
                   
                </div>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-success" id="btn-create">Create</button>

                </div>
            }
        </div>



        <!--  Table -->

    </div>

</body>
</html>

